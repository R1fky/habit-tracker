<body class="bg-gradient-to-br from-blue-50 to-white min-h-screen">
  <!-- Header -->
  <header class="bg-white shadow-lg border-b-4 border-blue-500">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-blue-900">Habit Tracker</h1>
        </div>
        <div class="text-sm text-blue-600 font-medium" id="currentDate"></div>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-6 py-8">
    <!-- Dashboard Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Habit Selesai Hari Ini</div>
            <div class="text-2xl font-bold text-blue-900" id="completedToday">0</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-400">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Streak Terpanjang</div>
            <div class="text-2xl font-bold text-blue-900" id="longestStreak">0</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-300">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Total Habit</div>
            <div class="text-2xl font-bold text-blue-900" id="totalHabits">0</div>
          </div>
        </div>
      </div>
    </div>
    <!-- Progress Hari Ini -->
    <div class="mt-4">
      <h2 class="text-lg font-semibold mb-2">Progress Hari Ini</h2>
      <div class="w-full bg-gray-200 rounded-full h-6">
        <div id="progressBar" class="bg-green-500 h-6 rounded-full text-white text-sm flex items-center justify-center transition-all duration-500" style="width: 0%">0%</div>
      </div>
    </div>

    <!-- Add New Habit -->
    <div class="mt-4 bg-white rounded-xl shadow-md p-6 mb-8">
      <h2 class="text-xl font-bold text-blue-900 mb-4">Tambah Habit Baru</h2>
      <div class="flex flex-col sm:flex-row gap-4">
        <input type="text" id="habitInput" placeholder="Masukkan nama habit baru..." class="flex-1 px-4 py-3 border-2 border-blue-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors" />
        <textarea id="habitDescription" placeholder="Tambahkan deskripsi habit (opsional)" class="flex-1 px-4 py-3 border-2 border-blue-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors"></textarea>
        <button onclick="addHabit()" class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-all duration-200 transform hover:scale-105 font-medium shadow-md">Tambah Habit</button>
      </div>
    </div>

    <!-- Habits List -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-2xl font-bold text-blue-900 mb-6">Habit Hari Ini</h2>
      <div id="habitsList" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Habit cards akan ditambahkan di sini -->
      </div>

      <div id="emptyState" class="text-center py-12 text-gray-500">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <p class="text-lg font-medium">Belum ada habit yang ditambahkan</p>
        <p class="text-sm">Mulai dengan menambahkan habit pertama Anda!</p>
      </div>
    </div>
  </div>

  <!-- Progress Modal -->
  <div id="progressModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-xl p-6 m-4 max-w-md w-full">
      <h3 class="text-lg font-bold text-blue-900 mb-4">Progress Habit</h3>
      <div id="progressContent"></div>
      <button onclick="closeProgressModal()" class="mt-4 w-full px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">Tutup</button>
    </div>
  </div>
  <script src="/js/habit.js"></script>
  <!-- </body> -->
</body>
