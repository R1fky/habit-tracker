<nav id="navbar" class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50 transition-shadow duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700">HabitTracker</a>

      <!-- Desktop Links -->
      <div class="flex items-center space-x-6" id="navLinks">
        <!-- isi dengan JS -->
      </div>

      <!-- Mobile button -->
      <div class="flex items-center md:hidden">
        <button id="mobile-menu-button" class="text-gray-600 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
    <!-- isi dengan JS -->
  </div>
</nav>

<script>
  async function renderNavbar() {
    const navLinks = document.getElementById("navLinks");
    const mobileMenu = document.getElementById("mobile-menu");
    let user = null;

    try {
      const res = await fetch("/user/me"); // <-- ambil data user
      if (res.ok) {
        const data = await res.json();
        user = data.user;
      }
    } catch (err) {
      console.error("Gagal ambil user:", err);
    }

    if (user) {
      navLinks.innerHTML = `
      <a href="/" class="text-gray-600 hover:text-blue-600 transition">Beranda</a>
      <a href="/habbit" class="text-gray-600 hover:text-blue-600 transition">Habbit</a>
      <span class="text-gray-700 font-medium">Hi, ${user.name || user.email}</span>
      <button onclick="logout()" class="bg-red-500 text-white px-4 py-1 rounded hover:bg-red-600 transition">Logout</button>
    `;

      mobileMenu.innerHTML = `
      <a href="/" class="block py-2 text-gray-600 hover:text-blue-600">Beranda</a>
      <a href="/habbit" class="block py-2 text-gray-600 hover:text-blue-600">Habbit</a>
      <span class="block py-2 text-gray-700 font-medium">Hi, ${user.name || user.email}</span>
      <button onclick="logout()" class="block w-full py-2 bg-red-500 text-white rounded mt-2 hover:bg-red-600">Logout</button>
    `;
    } else {
      // Belum login
      navLinks.innerHTML = `
      <a href="/" class="text-gray-600 hover:text-blue-600 transition">Beranda</a>
      <a href="/auth/loginPage" class="text-blue-600 border border-blue-600 px-4 py-1 rounded hover:bg-blue-50 transition">Login</a>
      <a href="/auth/register" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700 transition">Daftar</a>
    `;

      mobileMenu.innerHTML = `
      <a href="/" class="block py-2 text-gray-600 hover:text-blue-600">Beranda</a>
      <a href="/auth/loginPage" class="block py-2 text-blue-600">Login</a>
      <a href="/auth/register" class="block py-2 text-white bg-blue-600 rounded text-center">Daftar</a>
    `;
    }
  }

  function logout() {
    fetch("/authGoogle/logout").then(() => {
      window.location.href = "/";
    });
  }

  document.addEventListener("DOMContentLoaded", renderNavbar);
</script>
